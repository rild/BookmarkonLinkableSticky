<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialog">
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@color/sienna</item>
        <item name="android:topDark">@color/sienna</item>
        <item name="android:centerBright">@color/sienna</item>
        <item name="android:centerDark">@color/sienna</item>
        <item name="android:centerMedium">@color/sienna</item>
        <item name="android:bottomBright">@color/olive</item>
        <item name="android:bottomDark">@color/olive</item>
        <item name="android:bottomMedium">@color/olive</item>

    </style>

    <style name="Appearance.BLSticky.Menu.Button" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">@dimen/menu_bottom_text_size</item>
        <item name="android:background">@color/_menu_button_color</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
