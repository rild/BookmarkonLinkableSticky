<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/res_board1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_Linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_height"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_margin"
            android:layout_marginLeft="@dimen/pallet_margin_left"
            android:layout_marginRight="@dimen/pallet_margin_right"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_pallet_pink"
                android:layout_width="@dimen/sticky_pallet_width"
                android:layout_height="@dimen/sticky_pallet_height"
                android:layout_marginLeft="@dimen/sticky_pallet_margin_left"
                android:layout_marginRight="@dimen/sticky_pallet_margin_right"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@color/sticky_red" />

            <ImageButton
                android:id="@+id/imageButton_pallet_green"
                android:layout_width="@dimen/sticky_pallet_width"
                android:layout_height="@dimen/sticky_pallet_height"
                android:layout_marginLeft="@dimen/sticky_pallet_margin_left"
                android:layout_marginRight="@dimen/sticky_pallet_margin_right"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@color/sticky_green" />

            <ImageButton
                android:id="@+id/imageButton_pallet_orange"
                android:layout_width="@dimen/sticky_pallet_width"
                android:layout_height="@dimen/sticky_pallet_height"
                android:layout_marginLeft="@dimen/sticky_pallet_margin_left"
                android:layout_marginRight="@dimen/sticky_pallet_margin_right"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@color/sticky_orange" />

            <ImageButton
                android:id="@+id/imageButton_pallet_blue"
                android:layout_width="@dimen/sticky_pallet_width"
                android:layout_height="@dimen/sticky_pallet_height"
                android:layout_marginLeft="@dimen/sticky_pallet_margin_left"
                android:layout_marginRight="@dimen/sticky_pallet_margin_right"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@color/sticky_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/edit4"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_bottom_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#b4b59364"
                android:onClick="clear"
                android:text="clear"
                android:textSize="12dp" />

            <Button
                android:id="@+id/edit2"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_bottom_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#b4b59364"
                android:onClick="save"
                android:text="save"
                android:textSize="12dp" />

            <Button
                android:id="@+id/edit3"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_bottom_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#b4b59364"
                android:onClick="link"
                android:text="link"
                android:textSize="12dp" />

            <Button
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_bottom_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#b4b59364"
                android:onClick="edit"
                android:text="activity"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

